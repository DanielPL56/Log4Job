@model Log4Job.Models.Project
@{
    ViewBag.Title = "New Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Project</h2>

@using (Html.BeginForm("Create", "Projects"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description)
        @Html.TextBoxFor(p => p.Description, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.HiddenFor(p => p.ProjectId)
}